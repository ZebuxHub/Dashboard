# Zebux Dashboard Environment Variables
# Copy this file to .env and fill in your values

# ============ REQUIRED SETTINGS ============

# Node Environment (production/development)
NODE_ENV=production

# Server Port (Railway/Heroku will set this automatically)
PORT=3000

# Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=zimpyfile
ADMIN_PASSWORD=050042767

# JWT Secret (CHANGE THIS TO A RANDOM STRING!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============ OPTIONAL SETTINGS ============

# Frontend URL (for CORS, auto-detected if not set)
FRONTEND_URL=https://your-domain.com

# Database Settings (SQLite is used by default)
# DATABASE_URL=sqlite:./data/zebux.db

# Redis URL (optional, for caching)
# REDIS_URL=redis://localhost:6379

# ============ DEPLOYMENT EXAMPLES ============

# Railway Example:
# NODE_ENV=production
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=secure-password-123
# JWT_SECRET=railway-zebux-dashboard-secret-key

# Heroku Example:
# NODE_ENV=production
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=my-secure-password
# JWT_SECRET=heroku-zebux-jwt-secret-key

# DigitalOcean Example:
# NODE_ENV=production
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=digitalocean-password
# JWT_SECRET=do-zebux-dashboard-jwt-secret

# ============ SECURITY NOTES ============
# 1. Always change the default admin credentials
# 2. Use a strong, unique JWT secret
# 3. Never commit .env files to version control
# 4. Use environment variables in production
# 5. Regularly rotate secrets
